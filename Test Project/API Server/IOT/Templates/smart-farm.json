        "uni_button1":"boolean",	"uni_button2":"boolean",	"uni_button3":"boolean", 
        "led":"boolean",			"relay":"boolean", 
        "uni_sensor1":"number", 	"uni_sensor2":"number", 	"uni_sensor3": 		"number", 
        "uni_servo1":"number",		"uni_servo2":"number",		"uni_servo3": 		"number", 
