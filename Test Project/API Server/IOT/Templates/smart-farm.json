    "layout": [
        [
    		{"mode": "switch",	"value": [{ "name":"fan_motor"}]   , "name": "환기모터"},
            {"mode": "switch",  "value": [{ "name":"water_motor"}] , "name": "워터펌프"},
            {"mode": "switch",  "value": [{ "name":"air_motor"}]   , "name": "에어펌프"},
            {"mode": "switch",  "value": [{ "name":"heater_block"}], "name": "난방히터"}
        ],

        [
            {"mode":"pieGraph", "value": [{ "name":"temperature"}] , "min":0, "max":40,	"description":"Celsius",    "sign":"℃",  "name": "학원 온도"},
            {"mode":"pieGraph", "value": [{ "name":"humidity"}] ,    "min":0, "max":100,  "description":"relative",   "sign":"％",  "name": "학원 습도"},
            {"mode":"pieGraph", "value": [{ "name":"window_servo"}] ,"min":0, "max": 180, "description":"Degree",     "sign":"도",  "name": "창문서보각도"},
            {"mode":"pieGraph", "value": [{ "name":"cam_lr_servo"}] ,"min":0, "max": 180, "description":"Degree",     "sign":"도",  "name": "카메라서보각도"}
        ],

        [
            {"mode":"pieGraph", "value": [{ "name":"soil_sensor"}],	  "min":0, "max":100, "description":"relative",   "sign": "％", "name": "토양습도"},
            {"mode":"pieGraph", "value": [{ "name":"cds_sensor"}],	  "min":0, "max":1023,"description":"illuminance","sign": "lux","name": "조도센서"},
            {"mode":"pieGraph", "value": [{ "name":"co2_sensor"}],	  "min":0, "max":100, "description": "co2",       "sign": "ppm","name": "이산화탄소"},
            {"mode":"pieGraph", "value": [{ "name":"ht_temp_sensor"}], "min":0, "max":100, "description": "floor H/T", "sign": "℃", "name": "난방히터온도" } 
        ],
		[   
		    {"mode":"barChart", 
		     "group":"hour",
		     "value":[
		    	{"name":"humidity", "method":"min", "label":"최저 습도" },
		        {"name":"humidity", "method":"avg", "label":"평균 습도" },
		        {"name":"humidity", "method":"max", "label":"최대 습도" }
		     ]
		    },
		    {"mode":"barChart", "value":[{"name":"temperature","label":"최저 온도" }]}
		],
        
        
        
        [
            {"mode": "getLastData",	"value": [{ "name": "led"}], "name": "스마트팜 LED 마지막 데이터"},
            {"mode":"pieGraph", 	"value": [{ "name": "temperature"}],        "min":0, "max":100, "description": "Celsius","sign": "m"}
        ],

        [
            {"mode": "getLastData",	"value": [{ "name": "temperature"}], "name": "온도 마지막 데이터"}
        ],
        
        [
            {"mode": "list",        "value": [{ "name":"humidity"}]},
            {"mode": "list",        "value": [{ "name":"cds_sensor"}]}
        ],
        
        [   {"mode": "list",        "value": [{ "name":"temperature"}]}
        ]
    ]
