        "humidity":"number", 
        "window_servo":"number",	"cam_lr_servo":"number",	"cam_ud_servo":"number", 
        "fan_motor":"boolean",		"water_motor":"boolean",	"air_motor":"boolean",	"heater_block": 	"boolean", 
